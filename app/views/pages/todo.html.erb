<div class="row" ng-app="myApp" ng-controller="myController as vm">
  <div class="page-header">
    <h3>{{vm.model.name}}'s To Do List</h3>
    <span class="label label-default" ng-hide="vm.incompleteCount() === 0" ng-class="vm.warningLevel()">{{vm.incompleteCount()}} items</span>
  </div>
  <div class="panel">
    <div class="input-group">
      <input class="form-control" ng-model="vm.actionText" />
      <span class="input-group-btn">
        <button class="btn btn-default" ng-click="vm.addNewItem(vm.actionText)">Add</button>
      </span>
    </div>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Description</th>
          <th>Done</th>
        </tr>
      </thead>
      <tbody>
        <tr ng-repeat="item in vm.model.items | checkedItems:showCompleted | orderBy: 'desc' track by $index">
          <td ng-bind="item.desc"></td>
          <td><input type="checkbox" ng-model="item.done" ng-true-value="'Yes'" ng-false-value="'No'"></td>
        </tr>
      </tbody>
    </table>
    <input type="checkbox" ng-model="showCompleted"> Show complete items
  </div>
</div>
