<div ng-app="filterApp">
  <div ng-controller="defaultController">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3>Products
          <span class="label label-primary">{{products.length}}</span>
        </h3>
      </div>
      <div class="panel-body">
        Limit: <select ng-model="limitVal"
          ng-options="item for item in limitRange"></select>
        <table class="table table-striped table-bordered table-condensed">
          <thead>
            <tr>
              <td>Name</td><td>Category</td><td>Expiry</td><td class="text-right">Price</td>
            </tr>
          </thead>
          <tbody>
            <tr ng-repeat="p in products | limitTo:limitVal">
              <td ng-bind="p.name | uppercase"></td>
              <td ng-bind="p.category | lowercase"></td>
              <td ng-bind="getExpiryDate(p.expiry) | date:'shortDate'"></td>
              <td class="text-right">{{p.price | currency}}</td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
